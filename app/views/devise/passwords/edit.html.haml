%h2 Change your password
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  = f.error_notification
  = f.input :reset_password_token, as: :hidden
  = f.full_error :reset_password_token
  .form-group
    = f.input :password, placeholder: 'New password (8 chars)', label: false, required: true, autofocus: true, input_html: { class: 'form-control' }
  .form-group
    = f.input :password_confirmation, placeholder: 'New password confirmation', label: false, required: true, autofocus: true, input_html: { class: 'form-control' }
  = f.button :submit, "Change my password"
= render "devise/shared/links"
