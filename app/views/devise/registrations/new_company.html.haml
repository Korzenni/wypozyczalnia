%h2 Sign up as business member

= simple_form_for(@user, url: create_company_path) do |f|
  = f.error_notification
  .form-group
    = f.simple_fields_for :companies do |c|
      = c.input :name, placeholder: 'Company name', label: false, required: true, autofocus: true, input_html: { class: 'form-control' }
  .form-group
    = f.input :email, placeholder: 'Email', label: false, required: true, input_html: { class: 'form-control' }
  .form-group
    = f.input :password, placeholder: 'Password (8 characters)', label: false, required: true, input_html: { class: 'form-control' }
  .form-group
    = f.input :password_confirmation, placeholder: 'Password confirmation', label: false, required: true, input_html: { class: 'form-control' }

  = f.button :submit, 'Sign up', class: 'btn btn-default'

= render "devise/shared/links"
