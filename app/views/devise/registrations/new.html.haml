%h2 Sign up

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.error_notification
  .form-group
    = f.input :email, placeholder: 'Email', label: false, required: true, autofocus: true, input_html: { class: 'form-control' }
  .form-group
    = f.input :password, placeholder: 'Password (8 characters)', label: false, required: true, input_html: { class: 'form-control' }
  .form-group
    = f.input :password_confirmation, placeholder: 'Password confirmation', label: false, required: true, input_html: { class: 'form-control' }
  .form-actions
    = f.button :submit, "Sign up"

= render "devise/shared/links"
